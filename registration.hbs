    <style>
        body {
    margin: 0%;
    padding: 0%;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.main {

    /* background-size: cover; */
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.alert-danger {
    color: red;
}
.subdiv{
    width: 100vw;
    height: 100vh;
    background-color: white;
    padding: 20px;
    display: flex;
    justify-content: space-around;
}
.formbody{
    width: 35vw;
    margin-right: 50px;
    margin-top: 20px;
    margin-left: 10px;
    
}
.right-image{
    width: 90%;
    height: 85%;
    padding-left: 40px;
}
.right-div{
    background-color: rgb(13, 114, 145);
    border-radius: 10px;
}
h1{
    color: rgb(3, 92, 92);
    font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}

    </style>
    
</head>

<body>
    <div class="main">
        <div class="subdiv">
            <div class="formbody shadow p-3  bg-body rounded    ">
                <h1 class="text-center">Registration</h1>
                <form name="loginform" id="loginform" onsubmit="validate(event)">
                    <div>
                        <label for="first name">First Name</label>
                        <input type="name" name="firstName" class="form-control" placeholder="First name">
                    </div>
                    <div>
                        <label for="last name">Last Name</label>
                        <input type="name" name="lastName" class="form-control" placeholder="Last name">
                    </div>

                    
                    <div>
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control" minlength="8" maxlength="25" required>
                    </div>
                    
                    <div>
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" >
                    </div>
                    <div>
                        <label for="mobile">Mobile Number</label>
                        <input type="number" name="mobile" class="form-control">
                    </div>
                    <div>
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" class="form-control" required>
                    </div>
                    <div>
                        <label for="dob">Date of birth</label>
                        <input type="date" name="dob" id="dob" class="form-control" required>
                    </div>
                    <div>
                        <label for="gender">Gender</label>
                        <input type="radio" id="male" name="gender" value="1"/>Male
                        <input type="radio" id="female" name="gender" value="2"/>Female
                    </div>
                    
                  
    
                    <h6 id="pass"></h6>
    
                    <div class="d-grid mt-4">
                        <p class="alert-danger" id="error-messages"></p>
                        <button type="submit" class="btn btn-primary shadow" id="btn-login"
                            onclick="return validate();">Sign In</button>
                    </div>
                </form>
    
    
            </div>

            <div class="right-div" >
                {{!-- <img src="assets/images/taxi-app-development-banner.png" alt="" class="right-image"> --}}
            </div>

        </div>
       



    </div>
    </div>
    <script>
        function validate(e) {
            var email = document.forms[0]['username'];
            var password = document.forms[0]['password'];
            var confirmpass = document.forms[0]['cpassword'];
            var error = document.getElementById('error-messages');
            var passerr = document.getElementById('pass');
            if (!email.validity.valid) {
                error.innerHTML = 'Please enter a valid email';
                return false; passerr
            }
            if (!password.validity.valid) {
                error.innerHTML = 'Please enter a valid password';
                return false;
            }
            e.preventDefault();
            if (password != confirmpass) {
                e.preventDefault();
                passerr.innerHTML = 'password not matching  '


            }

        }

    </script>
</body>

</html>